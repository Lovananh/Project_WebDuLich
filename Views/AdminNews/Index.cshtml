@model IEnumerable<Project_WebDuLich.Models.News>
@{
    ViewBag.Title = "Quản lý Tin tức";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>📰 Danh sách Tin tức</h2>

<p>
    @Html.ActionLink("➕ Thêm tin mới", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered">
    <tr>
        <th>Tiêu đề</th>
        <th>Vị trí</th>
        <th>Ngày tạo</th>
        <th>Tour liên quan</th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Location</td>
            <td>@item.CreatedDate.ToShortDateString()</td>
            <td>@(item.Tour?.TourName ?? "Không có")</td>
            <td>
                @Html.ActionLink("👁️", "Details", new { id = item.NewsID }, new { @class = "btn btn-sm btn-info" }) |
                @Html.ActionLink("✏️", "Edit", new { id = item.NewsID }, new { @class = "btn btn-sm btn-warning" }) |
                @Html.ActionLink("🗑️", "Delete", new { id = item.NewsID }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
</table>
