@model Project_WebDuLich.Models.News
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Tiêu đề</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Nội dung</label>
        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group">
        <label>Vị trí</label>
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Tour liên quan (tùy chọn)</label>
        @Html.DropDownList("TourID", null, "-- Chọn tour --", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    @Html.ActionLink("Huỷ", "Index", null, new { @class = "btn btn-secondary" })
}
