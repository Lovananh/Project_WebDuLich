@model Project_WebDuLich.Models.Booking
@{
    ViewBag.Title = "Chi tiết Booking";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>📋 Chi tiết Booking</h2>

<dl class="row">
    <dt class="col-sm-3">Người đặt</dt>
    <dd class="col-sm-9">@Model.User.UserName</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.User.Email</dd>

    <dt class="col-sm-3">Số điện thoại</dt>
    <dd class="col-sm-9">@Model.User.Phone</dd>

    <dt class="col-sm-3">Tour</dt>
    <dd class="col-sm-9">@Model.Tour.TourName</dd>

    <dt class="col-sm-3">Ngày đặt</dt>
    <dd class="col-sm-9">@Model.BookingDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Tổng giá</dt>
    <dd class="col-sm-9">@Model.TotalPrice.ToString("N0") VNĐ</dd>

    <dt class="col-sm-3">Trạng thái</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

