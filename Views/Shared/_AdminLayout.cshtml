<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 bg-light" style="min-height:100vh">
                <h4 class="p-3">Admin Panel</h4>
                <ul class="nav flex-column p-2">
                    <li>@Html.ActionLink("🏠 Trang chủ", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("🌍 Quản lý Tour", "Index", "Tours", new { area = "Admin" }, null)</li>
                    <li>@Html.ActionLink("📚 Booking", "Index", "AdminBookings", new { area = "Admin" }, null)</li>
                    <li>@Html.ActionLink("Quản lý Đặt Tour", "Index", "AdminBookings", new { id = 5 }, null)</li>
                    <li>@Html.ActionLink("Quản lý Tin Tức", "Index", "AdminNews")</li>
                </ul>
            </div>
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
