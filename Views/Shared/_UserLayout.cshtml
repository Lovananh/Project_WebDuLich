
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>User - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-light bg-light p-3">
        <span class="navbar-brand">Chào mừng, @Session["User"]</span>
        @Html.ActionLink("Đăng xuất", "Logout", "Login", null, new { @class = "btn btn-outline-danger" })
    </div>

    <div class="container">
        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">@Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Đặt tour", "Index", "Bookings", null, new { @class = "nav-link" })</li>
        </ul>

        @RenderBody()
    </div>
</body>
</html>
